<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(2.5rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(3rem);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .results-header {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }

  .results-slider {
    opacity: 0;
    animation: slideInRight 0.9s ease-out 0.4s forwards;
  }

  .slider-dot.active {
    background-color: #3b82f6;
    transform: scale(1.3);
  }

  .slider-dot:hover:not(.active) {
    background-color: #6b7280;
    transform: scale(1.1);
  }

  /* Smooth image loading */
  img {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }
</style>

<script>
  const sliderTrack = document.getElementById('slider-track');
  const dots = document.querySelectorAll('.slider-dot');
  let currentIndex = 0;
  let totalSlides = 2;
  let autoPlayInterval;
  let isDesktop = window.innerWidth >= 768;

  function updateResponsiveSettings() {
    isDesktop = window.innerWidth >= 768;
    totalSlides = 3;
  }

  function updateSlider(index) {
    if (!sliderTrack) return;
    
    const firstChild = sliderTrack.children[0];
    if (!firstChild) return;
    
    const gap = isDesktop ? 16 : 12;
    const slideWidth = firstChild.offsetWidth + gap;
    
    sliderTrack.style.transform = `translateX(-${index * slideWidth}px)`;
    
    // Update dots - En móvil cada dot representa 2 slides, en desktop 1 slide
    dots.forEach((dot, i) => {
      if (isDesktop) {
        // Desktop: dots 0 y 1 para las primeras 2 slides
        dot.classList.toggle('active', i === Math.floor(index / 2));
      } else {
        // Móvil: cada dot representa 1 slide
        dot.classList.toggle('active', i === Math.floor(index / 2));
      }
    });
    
    currentIndex = index;
  }

  function nextSlide() {
    let nextIndex = currentIndex + 1;
    
    if (isDesktop) {
      // En desktop, avanzar de 2 en 2 para mostrar siempre 2 cards
      nextIndex = currentIndex + 2;
      if (nextIndex >= totalSlides) {
        nextIndex = 0;
      }
    } else {
      // En móvil, avanzar de 1 en 1
      if (nextIndex >= totalSlides) {
        nextIndex = 0;
      }
    }
    
    updateSlider(nextIndex);
  }

  function startAutoPlay() {
    stopAutoPlay();
    autoPlayInterval = setInterval(nextSlide, 3000);
  }

  function stopAutoPlay() {
    if (autoPlayInterval) {
      clearInterval(autoPlayInterval);
    }
  }

  // Dot navigation
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      stopAutoPlay();
      if (isDesktop) {
        // En desktop, cada dot representa 2 slides
        updateSlider(index * 2);
      } else {
        // En móvil, cada dot representa 2 slides también
        updateSlider(index * 2);
      }
      startAutoPlay();
    });
  });

  // Pause on hover
  if (sliderTrack) {
    sliderTrack.addEventListener('mouseenter', stopAutoPlay);
    sliderTrack.addEventListener('mouseleave', startAutoPlay);
  }

  // Handle window resize
  let resizeTimeout;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(() => {
      const wasDesktop = isDesktop;
      updateResponsiveSettings();
      
      if (wasDesktop !== isDesktop) {
        currentIndex = 0;
        updateSlider(0);
      }
    }, 250);
  });

  // Initialize
  updateResponsiveSettings();
  startAutoPlay();
  
  if (dots.length > 0) {
    dots[0].classList.add('active');
  }

  // Cleanup on page unload
  window.addEventListener('beforeunload', stopAutoPlay);
</script>